  { Number:"", name:"Ford Territory", year:"2025",cc:1490, hp:160, seats:5, weight:50, Kg:1750, length:4.58, width:1.86, height:1.67 },
  { Number:"", name:"Ford Ranger XLT (6AT)",year:"2025", cc:1496, hp:168, seats:5, weight:600, Kg:2155, length:5.37, width:2, height:1.88 },
  { Number:"", name:"Ford Ranger (10AT)", year:"2025",cc:2000, hp:207, seats:5, weight:600, Kg:2173, length:5.35, width:2, height:1.87 },
  { Number:"PV3AKFF60SL0044467", name:"Ford Ranger WD", year:"2025", cc:2000, hp:207, seats:5, weight:600, Kg:2340, length:5.37, width:2, height:1.88 },
  { Number:"", name:"Ford Ranger XL", year:"2025", cc:2000, hp:168, seats:5, Kg:2455, length:5.37, width:2, height:1.88 },
  { Number:"", name:"Ford Ranger Raptor (10AT)",year:"2025",cc:2000, hp:210, seats:5, weight:300, Kg:2430, length:5.36, width:2, height:1.92 },
  { Number:"", name:"Ford Ranger Raptor (10AT)", year:"2025",cc:3000, hp:392, seats:5, weight:300, Kg:2430, length:5.36, width:2, height:1.92 },
  { Number:"", name:"Mercedes Benz C300 2015", year:"2025",cc:2000, hp:207, seats:5, weight:50, Kg:50, length:4.68, width:1.81, height:1.44 }

];

function searchData() {
  const nameKey = document.getElementById("searchName").value.toLowerCase();
  const numberKey = document.getElementById("searchNumber").value.toLowerCase();
  const result = document.getElementById("result");

  const filtered = data.filter(item =>
    item.name.toLowerCase().includes(nameKey) &&
    (item.Number ?? "").toLowerCase().includes(numberKey)
  );

  if (filtered.length === 0) {
    result.innerHTML = "<p>No data found</p>";
    return;
  }

  let table = `
  <div class="table-wrapper">
  <table>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Year</th>
      <th>CC</th>
      <th>HP</th>
      <th>Seats</th>
      <th>Weight</th>
      <th>Kg</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
    </tr>`;

  filtered.forEach(item => {
    table += `
    <tr>
      <td>${item.Number ?? "-"}</td>
      <td>${item.name}</td>
      <td>${item.year ?? "-"}</td>
      <td>${item.cc ?? "-"}</td>
      <td>${item.hp ?? "-"}</td>
      <td>${item.seats ?? "-"}</td>
      <td>${item.weight ?? "-"}</td>
      <td>${item.Kg ?? "-"}</td>
      <td>${item.length ?? "-"}</td>
      <td>${item.width ?? "-"}</td>
      <td>${item.height ?? "-"}</td>
    </tr>`;
  });

  table += `</table></div>`;
  result.innerHTML = table;
}

function clearSearch() {
  searchName.value = "";
  searchNumber.value = "";
  result.innerHTML = "";
  searchName.focus();
}
</script>

